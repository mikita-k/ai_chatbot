# Copy this file to .env and fill in your OpenAI API key
# Feature Flags (optional, default: false)
# Set to true to enable, false to disable
USE_LLM=false      # Enable Large Language Model (LLM) features
USE_TELEGRAM=false # Enable Telegram notifications

# OpenAI Configuration (required only if USE_LLM=true)
OPENAI_API_KEY=sk-openai-api-key # Replace with your actual OpenAI API key
OPENAI_MODEL=gpt-4o-mini         # You can choose from various models like gpt-4, gpt-4o, gpt-3.5-turbo, etc.

# Telegram Configuration (required only if USE_TELEGRAM=true)
# Get these from @BotFather and your admin chat
TELEGRAM_BOT_TOKEN=your_bot_token   # Replace with your Telegram bot token
TELEGRAM_ADMIN_CHAT_ID=your_chat_id # Replace with your Telegram admin chat ID (can be a group or individual chat)